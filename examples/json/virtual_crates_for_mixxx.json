[
    {
        "name": "Pop/Rock",
        "description": "Pop/Rock with known BPM (sorted)",
        "query": {
            "filter": {
                "all": [
                    {
                        "any": [
                            {
                                "tag": {
                                    "facets": [
                                        "genre"
                                    ],
                                    "label": {
                                        "contains": "pop"
                                    }
                                }
                            },
                            {
                                "tag": {
                                    "facets": [
                                        "genre"
                                    ],
                                    "label": {
                                        "contains": "rock"
                                    }
                                }
                            }
                        ]
                    },
                    {
                        "numeric": {
                            "field": "musicTempo",
                            "value": {
                                "gt": 0
                            }
                        }
                    }
                ]
            },
            "ordering": [
                {
                    "field": "musicTempo"
                },
                {
                    "field": "trackArtist"
                }
            ]
        },
        "pagination": {
            "limit": 200
        }
    },
    {
        "name": "1980s",
        "query": {
            "filter": {
                "tag": {
                    "facets": [
                        "epoch"
                    ],
                    "label": {
                        "equals": "1980s"
                    }
                }
            },
            "ordering": [
                {
                    "field": "musicTempo"
                },
                {
                    "field": "trackArtist"
                }
            ]
        },
        "pagination": {
            "limit": 100
        }
    },
    {
        "name": "Top 40",
        "query": {
            "filter": {
                "tag": {
                    "label": {
                        "matches": "top40"
                    }
                }
            },
            "ordering": [
                {
                    "field": "musicTempo"
                },
                {
                    "field": "trackArtist"
                }
            ]
        },
        "pagination": {
            "limit": 100
        }
    },
    {
        "name": "Selection: DJ",
        "description": "Selected tracks for DJing with known BPM (sorted)",
        "query": {
            "filter": {
                "all": [
                    {
                        "tag": {
                            "facets": [
                                "selection"
                            ],
                            "label": {
                                "matches": "dj"
                            }
                        }
                    },
                    {
                        "numeric": {
                            "field": "musicTempo",
                            "value": {
                                "gt": 0
                            }
                        }
                    }
                ]
            },
            "ordering": [
                {
                    "field": "musicTempo"
                },
                {
                    "field": "trackArtist"
                }
            ]
        },
        "pagination": {
            "limit": 100
        }
    },
    {
        "name": "BPM: 80-100",
        "query": {
            "filter": {
                "all": [
                    {
                        "numeric": {
                            "field": "musicTempo",
                            "value": {
                                "ge": 80
                            }
                        }
                    },
                    {
                        "numeric": {
                            "field": "musicTempo",
                            "value": {
                                "le": 100
                            }
                        }
                    }
                ]
            },
            "ordering": [
                {
                    "field": "musicTempo"
                },
                {
                    "field": "trackArtist"
                }
            ]
        },
        "pagination": {
            "limit": 100
        }
    },
    {
        "name": "Compilations",
        "query": {
            "filter": {
                "phrase": {
                    "fields": [
                        "albumArtist"
                    ],
                    "terms": [
                        "various",
                        "artists"
                    ]
                }
            },
            "ordering": [
                {
                    "field": "albumTitle"
                }
            ]
        },
        "pagination": {
            "limit": 100
        }
    }
]
